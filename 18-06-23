class Solution 
{
    public static int distributeTicket(int N,int K)
    {
        int start =1;
        int end = N;
        
        while((end-start)>=K){
            start+=K;
            if((end-start)<K){
                return start;  
            } 
            end-=K;
        }
        
        return end;
    }
}
